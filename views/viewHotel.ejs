                <li class="nav-item active">
                    <a class="nav-link" href="/hotels">List Hotels </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/hotels/hotelForm">Register Hotel</a>
                </li>

            </ul>
        </div>
    </nav>
    <h1>aqui va la vista del formulario para editarlo</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-4">

                <form action="/hotels/updateHotel/<%- result.idhotel %>" method="post" enctype="multipart/form-data">
                    <div class="containerInventado">
                        <label for="name">Name hotel</label>
                        <input type="text" name="name" placeholder="<%- result.name %>" value="<%- result.name %>">
                    </div>
                    <div class="containerInventado ">
                        <label for="adress ">Adress hotel</label>
                        <input type="text " name="adress" value="<%- result.adress %>" placeholder="<%- result.adress %>">
                    </div>
                    <div class="containerInventado">
                        <label for="phone">Phone hotel</label>
                        <input type="number" name="phone" value="<%- result.phone %>" placeholder="<%- result.phone %>">
                    </div>
                    <div class="containerInventado">
                        <label for="image">Image Hotel</label>
                        <input type="file" name="avatar" placeholder="image hotel">
                    </div>
                    <button type="submit" class="btn btn-success">Update Hotel</button>
                </form>
            </div>

        </div>
    </div>



